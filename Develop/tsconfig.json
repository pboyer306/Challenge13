{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node", // "bundler" can sometimes cause issues with older packages
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Prevents .js files from being emitted
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Output and Paths */
    "baseUrl": "./", // Enables absolute imports
    "paths": {
      "@/*": ["src/*"] // Supports aliasing
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
